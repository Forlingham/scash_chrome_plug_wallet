{
  "manifest_version": 3,
  "name": "SCASH Wallet",
  "version": "0.3.0",
  "description": "A non-custodial cryptocurrency wallet for SCASH, built with Next.js. Securely manage your assets, sign transactions locally, and interact with the SCASH blockchain.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open SCASH Wallet",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}